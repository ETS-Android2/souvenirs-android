<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/createAlbumRadioGroupStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@id/radioButtonTileStyle">

        <RadioButton
            android:id="@+id/radioButtonTileStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="TILE"
            android:text="@string/layout_radio_style_tile" />

        <RadioButton
            android:id="@+id/radioButtonFreeStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="FREE"
            android:text="@string/layout_radio_style_free" />

    </RadioGroup>

</LinearLayout>